{
  "name": "entropic-bond",
  "version": "1.1.2",
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "description": "Tidy up your messy components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "build": "npm run build-cjs",
    "prepare": "npm run build",
    "build-ts": "cp -r ./src/ ./lib",
    "build-cjs": "tsc -p tsconfig-cjs.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/entropic-bond.git"
  },
  "keywords": [
    "persistence",
    "reactive",
    "component",
    "observable"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/entropic-bond/issues"
  },
  "homepage": "https://github.com/entropic-bond/entropic-bond#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.23",
    "@types/uuid": "^8.3.0",
    "git-branch-is": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "semantic-release": "^17.4.3",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
