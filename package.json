{
  "name": "entropic-bond",
  "type": "module",
  "version": "1.49.0",
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "description": "Tidy up your messy components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "vitest",
    "build": "npm run build-cjs",
    "prepare": "npm run build",
    "build-ts": "cp -r ./src/ ./lib",
    "build-cjs": "tsc -p tsconfig-cjs.json",
    "build-next": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/entropic-bond.git"
  },
  "keywords": [
    "persistence",
    "reactive",
    "component",
    "observable"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/entropic-bond/issues"
  },
  "homepage": "https://github.com/entropic-bond/entropic-bond#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@type-challenges/utils": "^0.1.1",
    "@types/uuid": "^9.0.8",
    "git-branch-is": "^4.0.0",
    "husky": "^9.0.10",
    "semantic-release": "^23.0.0",
    "typedoc": "^0.25.7",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
