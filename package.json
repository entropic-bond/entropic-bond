{
  "name": "entropic-bond",
  "type": "module",
  "version": "1.53.2",
  "description": "Tidy up your messy components",
  "main": "./lib/entropic-bond.umd.cjs",
  "module": "./lib/entropic-bond.js",
  "exports": {
    ".": {
      "import": "./lib/entropic-bond.js",
      "require": "./lib/entropic-bond.umd.cjs",
      "types": "./lib/index.d.ts"
    }
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "test": "vitest",
    "build": "vite build",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entropic-bond/entropic-bond.git"
  },
  "keywords": [
    "persistence",
    "reactive",
    "component",
    "observable"
  ],
  "author": "Josep Seto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entropic-bond/entropic-bond/issues"
  },
  "homepage": "https://github.com/entropic-bond/entropic-bond#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@type-challenges/utils": "^0.1.1",
    "@types/node": "^22.5.5",
    "@types/uuid": "^10.0.0",
    "git-branch-is": "^4.0.0",
    "husky": "^9.1.6",
    "semantic-release": "^24.1.1",
    "typedoc": "^0.26.7",
    "typedoc-plugin-markdown": "^4.2.7",
    "typescript": "^5.6.2",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "if git-branch-is master; then npm test; fi"
    }
  }
}
